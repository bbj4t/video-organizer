# Hetzner Storage Box
HETZNER_STORAGE_HOST=u123456.your-storagebox.de
HETZNER_STORAGE_USER=u123456
HETZNER_STORAGE_PASSWORD=your_password
HETZNER_STORAGE_PATH=/video-library

# Hetzner VM
HETZNER_VM_IP=your_vm_ip
WIREGUARD_INTERFACE=wg0

# RunPod
RUNPOD_API_KEY=your_runpod_api_key
RUNPOD_ENDPOINT_ID=your_endpoint_id  # For serverless
# OR for spot pods:
RUNPOD_POD_ID=your_pod_id

# Cloud Storage
RCLONE_CONFIG_PATH=/config/rclone.conf

# API Keys
TMDB_API_KEY=your_tmdb_api_key
OPENAI_API_KEY=your_openai_key  # Optional for fallback

# Database
POSTGRES_USER=videoorg
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=video_organizer

# Redis
REDIS_URL=redis://redis:6379/0

# Processing
BATCH_SIZE=5
MAX_CONCURRENT_ANALYSIS=3
FRAME_EXTRACT_INTERVAL=30  # seconds

# Jellyfin
JELLYFIN_MOVIES_PATH=/organized/Movies
JELLYFIN_TV_PATH=/organized/TV Shows
JELLYFIN_OTHER_PATH=/organized/Other
